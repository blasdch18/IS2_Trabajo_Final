input[type=text]
    width 130px
    box-sizing border-box
    border 2px solid #ccc
    border-radius 4px
    font-size 16px
    background-color white
    background-image ('../../../../res/lupa.png')
    background-position 10px 10px
    background-repeat no-repeat
    padding 12px 20px 12px 40px
    -webkit-transition width 0.2s ease-in-out
    transition width 0.4s ease-in-out

input[type=text]:focus
    width 100%

// Button's styles 


a
    &.button
        display block
        position relative
        float left
        width 120px
        padding 0
        margin 10px 20px 10px 0
        font-weight 600
        text-align center
        line-height 50px
        color #FFF
        border-radius 5px
        transition all 0.2s


.btnLightBlue
    background #5DC8CD
    &.btnPush
        box-shadow 0px 5px 0px 0px #1E8185
        &:hover
            box-shadow 0px 0px 0px 0px #1E8185
    &.btnBorder
        box-shadow 0px 0px 0px 0px #01939A
        &:hover
            box-shadow 0px 0px 0px 5px #01939A
    &.btnFloat
        &:before
            background #5DC8CD


.btnFade
    &.btnBlueGreen
        &:hover
            background #21825B
    &.btnLightBlue
        &:hover
            background #01939A
    &.btnOrange
        &:hover
            background #FF8E00
    &.btnPurple
        &:hover
            background #6D184B

.btnPush
    &:hover
        margin-top 15px
        margin-bottom 5px

.btnFloat
    background none
    box-shadow 0px 0px 0px 0px rgba(0, 0, 0, 0.5)
    &:before
        content 'Float'
        display block
        position absolute
        top 0
        left 0
        width 120px
        height 50px
        border-radius 5px
        transition all 0.2s
        box-shadow 0px 0px 0px 0px rgba(0, 0, 0, 0.4)
    &:hover
        &:before
            margin-top -2px
            margin-left 0px
            transform scale(1.1,1.1)
            -ms-transform scale(1.1,1.1)
            -webkit-transform scale(1.1,1.1)
            box-shadow 0px 5px 5px -2px rgba(0, 0, 0, 0.25)

.btnSlide
    .top
        position absolute
        top 0px
        left 0
        width 120px
        height 50px
        background #00AE68
        z-index 10
        transition all 0.2s
        border-radius 5px
    &.btnLightBlue
        .top
            background #5DC8CD
    .bottom
        position absolute
        top 0
        left 0
        width 120px
        height 50px
        color #000
        z-index 5
        border-radius 5px
    &:hover
        .top
            top 40px